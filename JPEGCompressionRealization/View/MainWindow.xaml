<Window x:Class="JPEGCompressionRealization.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JPEGCompressionRealization"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Image x:Name="sourceImage" HorizontalAlignment="Left" Height="237" Margin="20,21,0,0" VerticalAlignment="Top" Width="183" Source="{Binding Path=ImageModel.ImageModelPath, UpdateSourceTrigger=PropertyChanged}"/>
        <Image x:Name="compressedImage" Height="237" Margin="310,21,20,0" VerticalAlignment="Top" Source="{Binding CompressedImage}"/>
        <Button x:Name="buttonCompress" Content="Compress" HorizontalAlignment="Left" Margin="220,238,0,0" VerticalAlignment="Top" Width="75" Background="#FFEEE2E2" FontSize="13.333" Command="{Binding CompressCommand}"/>
        <Button x:Name="button" Content="Open" HorizontalAlignment="Left" Margin="220,21,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.173,0.7" Background="#FFF1F1F1" FontSize="13.333" Command="{Binding OpenCommand}"/>
    </Grid>
</Window>
